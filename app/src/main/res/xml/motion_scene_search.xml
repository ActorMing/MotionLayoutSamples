<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:motionInterpolator="easeIn"
        app:duration="2200">
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="86"
                android:scaleX="1.6"
                android:scaleY="1.6"
                app:motionTarget="@id/circle_bg"/>
<!--            <KeyCycle-->
<!--                app:motionTarget="@+id/circle_outer"-->
<!--                app:framePosition="99"-->
<!--                android:scaleX="0.1"-->
<!--                app:wavePeriod="1"-->
<!--                app:waveShape="bounce"-->
<!--                app:waveOffset="2"/>-->
<!--            <KeyCycle-->
<!--                app:motionTarget="@+id/circle_mid"-->
<!--                app:framePosition="99"-->
<!--                android:scaleX="0.1"-->
<!--                app:wavePeriod="1"-->
<!--                app:waveShape="bounce"-->
<!--                app:waveOffset="2.6"/>-->
        </KeyFrameSet>
        <OnClick app:targetId="@+id/circle_inner"
            app:clickAction="toggle"
            />
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/circle_inner"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/circle_mid"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:alpha="0.43"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/circle_outer"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:alpha="0.21"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/circle_bg"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:alpha="0.56"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/circle_inner"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleX="3"
            android:scaleY="3"
            android:alpha="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/circle_mid"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:alpha="0.6"
            android:scaleX="2.6"
            android:scaleY="2.6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/circle_outer"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleX="2"
            android:scaleY="2"
            android:alpha="0.32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/circle_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:scaleX="2"
            android:scaleY="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>
</MotionScene>